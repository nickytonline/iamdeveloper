---
export interface Props {
  date: Date;
  showTime?: boolean;
  class?: string;
}

const { date, showTime, class: className } = Astro.props;

// Use a default locale and timezone of en-US/Eastern
const localizedDate = date.toLocaleString('en-US', {
  timeZone: 'America/New_York',
  dateStyle: 'full',
});
---

<date datetime={date.toISOString()} class={className}>{localizedDate}</date>
