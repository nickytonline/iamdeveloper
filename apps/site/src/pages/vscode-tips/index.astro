---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import PostList from '../../components/PostList.astro';
import Intro from '../../components/Intro.astro';

// Maybe there's a better way in Astro to sort the posts by date?
const vscodeTips = (await getCollection('vscodetips')).sort(
  (post1, post2) => Date.parse(post2.data.date) - Date.parse(post1.data.date)
);
const title = 'VS Code Tips';
---

<Layout title={title}>
  <Intro heading={title} />
  <PostList title="All Tips" posts={vscodeTips} postType="vscodetips" />
</Layout>
